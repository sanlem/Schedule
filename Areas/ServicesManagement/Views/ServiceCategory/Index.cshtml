@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<Schedule.Areas.ServicesManagement.Models.ServiceCategoryVM>

@{
    ViewData["Title"] = Localizer.GetString("ServiceCategoryListTitle");
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Localizer.GetString("ServiceCategoryCreateLinkText")</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentCategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentCategoryId)
                    </td>
                    <td>
                        @Html.ActionLink(Localizer.GetString("ServiceCategoryUpdateLinkText"), "Update", new { id = item.Id }) |
                        @Html.ActionLink(Localizer.GetString("ServiceCategoryDetailLinkText"), "Details", new { id = item.Id }) |
                        @Html.ActionLink(Localizer.GetString("ServiceCategoryDeleteLinkText"), "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <p class="text">@Localizer.GetString("ServiceCategoryIndexZeroExist")</p>
}
